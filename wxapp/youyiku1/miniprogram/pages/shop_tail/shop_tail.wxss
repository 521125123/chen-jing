/* miniprogram/pages/shop_tail/shop_tail.wxss */
.detail-image {
  width:100%;
  height: 600rpx;
}
/* 公告 样式 */
.inform {
  height: 50rpx;
  background-color: rgb(146, 139, 139);
  font-size: 25rpx;
  color: aliceblue;
  line-height: 50rpx;
  text-align: center;
}
/* 评价星级样式 */
.star{
  color: yellow;
  text-align: end;

}
.detail-info {
  background-color: white;
}
.detail-info .line1 {
  font-size: 10rpx;
  height: 80rpx;
  padding: 30rpx 30rpx 10rpx 30rpx;
  margin-bottom: 10rpx;
}
.detail-info .line1 view {
  font-size: 40rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.detail-info .line3 {
  padding: 10rpx 25rpx 30rpx 25rpx;
  display: flex;
  justify-content: space-between;
  font-size: 25rpx;
  color: gray;
}
.detail-info .line3 .price {
  font-size: 32rpx;
  color: #EE6A50;
}
.detail-info .line3 .purchaseFreq {
  padding-top: 9rpx;
}
.detail-info .line3 .iLike {
  padding-top: 9rpx;
}
.detail-info .line4 {
  height: 100rpx;
  background: #E0E3DA;
}
.divLine {
  background: #E0E3DA;
  width: 100vw;
  height: 20rpx;
}
.detail-info .line4 .select {
  height: 80rpx;
  background-color: #fff;
  line-height: 80rpx;
}
/* 详情 评论 咨询样式 */
.goods-tab-nav {
  display: inline-block;
  width: 33.3%;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #ededed;
  box-sizing: border-box;
  text-align: center;
  color: #c7c7cb;
}
.goods-tab-nav.on {
  color: rgba(255, 132, 132, 0.979);
  border-bottom: 5rpx solid rgba(255, 132, 132, 0.979);
}
.theDetail {padding: 40rpx;font-size: 45rpx;color: grey;text-align: center}
.WxComment {padding: 0;margin: 0;}


.detail-nav {
  position: fixed;
  display: flex;
  bottom: 0;
  box-shadow:0 0 8rpx 0;
  height: 100rpx;
  width: 750rpx;
  line-height: 100rpx;
  text-align: center;
  z-index: 666;
}
.detail-nav .cart {
  background-color: white;
  width: 120rpx;
  padding-top: 0rpx;
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: center;
}
.detail-nav .cart image {
  width:75rpx;
  height:55rpx;
  margin:10rpx 0 0 0rpx;
  padding:0 13rpx 5rpx 0;
}
.detail-nav .cart view {
  font-size:18rpx;
  height:30rpx;
  line-height:30rpx;
}
.detail-nav .addToCart {
  background-color: red;
  flex: 1;
  color: white
}
.detail-nav .buy {
  background-color:white;
  width: 150rpx;
  color: red
}





.popUpWindow .popCount {
  display: flex;
  justify-content: space-between;
  width: 700rpx;
  font-size: 35rpx;
  padding: 25rpx 30rpx 0 0;
}
.popUpWindow .plusMinus {
  display: flex;
  justify-content: space-between
}
.popCount .word {
  line-height: 100rpx;
  width:200rpx;
}
.popUpWindow .popCount .plusMinus view {
  width: 80rpx;
  height: 80rpx;
  font-size: 50rpx;
  font-weight: bold;
  text-align: center;
 
}
.popCount .plusMinus .count{
  border: 1px solid grey;
}
.popUpWindow .popCount .plusMinus .textenough{
  font-size: 20rpx;
  line-height: 80rpx;
}
.popUpWindow .popButton {
  position: fixed;
  z-index: 999;
  bottom: 0;
  left: 0;
  height: 90rpx;
  line-height: 90rpx;
  width: 100%;
  background-color: rgb(247, 112, 71);
  color: white;
  text-align: center
}